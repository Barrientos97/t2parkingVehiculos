<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/t2p_grey_color" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:id="@android:id/background" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/t2p_grey_color" />
            <stroke android:width="1dp" android:color="@color/t2p_red_color" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>